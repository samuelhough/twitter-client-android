<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.codepath.apps.twitterclient.activities.fragments.TimelineFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.codepath.apps.twitterclient.activities.TimelineActivity"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvTweetsTimeline"
            android:orientation="vertical"/>

    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
